<div class="jumbotron" style="width:50%;">
  <fieldset>
    <legend><%= @titulo %></legend>
   
      <% form_for(@ejercicioDTO, '/ejercicios/crear') do |f| %>
          <%= f.text_field :idRutina, hidden: true %>
          <%= f.text_field :idWeb, hidden: true %>
          <%= f.check_box :esDeCarga, hidden: true %>
          <div class="form-group has-warning label-floating">
            <label class="control-label" for="focusedInput1">Ingrese un nombre</label>
            <%= f.text_field :nombre, id:"focusedInput1", :class=>"form-control", type: "text" , required: true %>
          </div>
          <div class="form-group has-warning label-floating ">
            <label class="control-label" for="focusedInput1">Ingrese cantidad de series</label>
            <%= f.text_field :series, :type => "number", :class=>"form-control", required: true %>
          </div>
           <% if $esDeCarga == "true" %>

          <div class="form-group has-warning label-floating ">
            <label class="control-label" for="focusedInput1">Ingrese cantidad de repeticiones</label>
            <%= f.text_field :repeticiones, :type => "number", :class=>"form-control", required: true %>
          </div>
          <% else%> 
          <div class="form-group has-warning label-floating ">
            <label class="control-label" for="focusedInput1">Ingrese tiempo activo</label>
            <%= f.text_field :tiempoActivo, :type => "number", :class=>"form-control", required: true %>
          </div>
          <div class="form-group has-warning label-floating ">
            <label class="control-label" for="focusedInput1">Ingrese tiempo descanso</label>
            <%= f.text_field :tiempoDescanso, :type => "number", :class=>"form-control", required: true %>
          </div>
          <% end%> 
          <div class="form-group has-warning label-floating ">
            <label class="control-label" for="focusedInput1">DÃ­a de la semana</label>
             <select  class="form-control" name="dias">
                <option value="Lunes">Lunes</option>
                <option value="Martes">Martes</option>
                <option value="Miercoles">Miercoles</option>
                <option value="Jueves">Jueves</option>
                <option value="Viernes">Viernes</option>
                <option value="Sabado">Sabado</option>
              </select>
          </div>
            
            <br/>
            <%= f.submit "Crear" ,:class => "btn btn-raised btn-warning" %>
          </div>
      <% end %>
  </fieldset>
</div>
